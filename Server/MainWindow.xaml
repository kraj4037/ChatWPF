<Window x:Class="FirstWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWPF"
        mc:Ignorable="d"
        Title="Server" Height="310" Width="300">
    <Border Padding="2">
        <StackPanel>
            <StackPanel Name="stpMessages" Height="230" Margin="0,0,0,10" Background="LightGray">
                <TextBlock TextWrapping="Wrap" Name="lblMessagesHistory"></TextBlock>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Name="txtMessageToBeSend" Margin="0,0,5,0"></TextBox>
                <Button Grid.Column="1" Name="btnSendMessage" Content="Send" Click="SendMessage"></Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>
